{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2017", "es7", "es6"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "types": ["node"],
    "paths": {
      "@prisma/client": [
        "../../packages/api-prisma/node_modules/.prisma/client"
      ],
      "@prisma/client/*": [
        "../../packages/api-prisma/node_modules/.prisma/client/*"
      ],
      "@hed-hog/api": ["../../packages/api/src"],
      "@hed-hog/api/*": ["../../packages/api/src/*"],
      "@hed-hog/api-locale": ["../../packages/api-locale/src"],
      "@hed-hog/api-locale/*": ["../../packages/api-locale/src/*"],
      "@hed-hog/api-mail": ["../../packages/api-mail/src"],
      "@hed-hog/api-mail/*": ["../../packages/api-mail/src/*"],
      "@hed-hog/api-pagination": ["../../packages/api-pagination/src"],
      "@hed-hog/api-pagination/*": ["../../packages/api-pagination/src/*"],
      "@hed-hog/api-prisma": ["../../packages/api-prisma/src"],
      "@hed-hog/api-prisma/*": ["../../packages/api-prisma/src/*"],
      "@hed-hog/api-healthy": ["../../packages/api-healthy/src"],
      "@hed-hog/api-healthy/*": ["../../packages/api-healthy/src/*"],
      "@hed-hog/api-developer": ["../../packages/api-developer/src"],
      "@hed-hog/api-developer/*": ["../../packages/api-developer/src/*"],

      "@hed-hog/admin": ["../../libraries/admin/src"],
      "@hed-hog/admin/*": ["../../libraries/admin/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", ".turbo"]
}
